<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_text_pantry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/raleway_medium"
        android:padding="16dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/item_text_pantry"
        app:layout_constraintStart_toEndOf="@+id/item_text_pantry"
        app:layout_constraintTop_toTopOf="@+id/item_text_pantry"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/item_quantity_pantry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_weight="2"
        android:fontFamily="@font/raleway_medium"
        android:padding="16dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_text_pantry"
        app:layout_constraintEnd_toStartOf="@+id/trashButton_pantry"
        app:layout_constraintTop_toTopOf="@+id/item_text_pantry" />

    <ImageView
        android:id="@+id/trashButton_pantry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_text_pantry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_text_pantry"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>