<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRecipeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/raleway_medium"
        android:padding="16dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recipe_red_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRecipeItem"
        app:layout_constraintStart_toEndOf="@+id/textViewRecipeItem"
        app:layout_constraintTop_toTopOf="@+id/textViewRecipeItem"
        app:srcCompat="@drawable/ic_baseline_cancel_24" />

    <ImageView
        android:id="@+id/recipe_green_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRecipeItem"
        app:layout_constraintStart_toEndOf="@+id/textViewRecipeItem"
        app:layout_constraintTop_toTopOf="@+id/textViewRecipeItem"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <ImageView
        android:id="@+id/recipe_yellow_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRecipeItem"
        app:layout_constraintStart_toEndOf="@+id/textViewRecipeItem"
        app:layout_constraintTop_toTopOf="@+id/textViewRecipeItem"
        app:srcCompat="@drawable/ic_baseline_remove_circle_24" />

    <ImageView
        android:id="@+id/recipe_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRecipeItem"
        app:layout_constraintStart_toEndOf="@+id/recipe_red_x"
        app:layout_constraintTop_toTopOf="@+id/textViewRecipeItem"
        app:srcCompat="@drawable/ic_baseline_favorite_24" />

</androidx.constraintlayout.widget.ConstraintLayout>